---
import Button from "@components/react/Buttons/Button";
import Layout from "@layouts/Layout.astro";
import NavigationMain from "@layouts/NavigationMain.astro";
---

<Layout title="404 | Page not found">
  <NavigationMain />

  <main class="container page-404">
    <h1>404 Page not found</h1>
    <p>We don't have what you are looking for</p>
    <a href="/">
      <Button type={"button"} className={"btn--navy"}>Home</Button></a
    >
  </main>
</Layout>

<style>
  html,
  body {
    height: 100%;
    display: flex;
    flex-direction: column;
    background-color: var(--green);
  }
  .page-404 {
    flex: 1;
    color: var(--navy);
    font-size: var(--fs-2);
    text-transform: uppercase;
    margin-top: 5rem;
  }
</style>
